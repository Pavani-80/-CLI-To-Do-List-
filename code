TASKS_FILE = "tasks.txt"

# Load tasks from file
def load_tasks():
    try:
        with open(TASKS_FILE, "r") as file:
            tasks = [line.strip() for line in file.readlines()]
    except FileNotFoundError:
        tasks = []
    return tasks

# Save tasks to file
def save_tasks(tasks):
    with open(TASKS_FILE, "w") as file:
        for task in tasks:
            file.write(task + "\n")

# Add a task
def add_task(tasks):
    task = input("Enter new task: ").strip()
    if task:
        tasks.append(task)
        save_tasks(tasks)
        print("âœ… Task added.")
    else:
        print("âš ï¸ Empty task not added.")

# View all tasks
def view_tasks(tasks):
    if not tasks:
        print("ğŸ“­ No tasks found.")
    else:
        print("\nğŸ“ Your Tasks:")
        for i, task in enumerate(tasks, start=1):
            print(f"{i}. {task}")
        print()

# Remove a task
def remove_task(tasks):
    view_tasks(tasks)
    if not tasks:
        return
    try:
        task_num = int(input("Enter task number to remove: "))
        if 1 <= task_num <= len(tasks):
            removed = tasks.pop(task_num - 1)
            save_tasks(tasks)
            print(f"ğŸ—‘ï¸ Removed task: '{removed}'")
        else:
            print("âš ï¸ Invalid task number.")
    except ValueError:
        print("âš ï¸ Please enter a valid number.")

# Main CLI loop
def main():
    print("ğŸ“‹ Welcome to Your To-Do List Manager")

    tasks = load_tasks()

    while True:
        print("\nOptions:")
        print("1. View Tasks")
        print("2. Add Task")
        print("3. Remove Task")
        print("4. Exit")

        choice = input("Enter your choice (1-4): ").strip()

        if choice == "1":
            view_tasks(tasks)
        elif choice == "2":
            add_task(tasks)
        elif choice == "3":
            remove_task(tasks)
        elif choice == "4":
            print("ğŸ‘‹ Exiting To-Do List Manager. Goodbye!")
            break
        else:
            print("âš ï¸ Invalid choice. Please enter a number from 1 to 4.")

if __name__ == "__main__":
    main()
